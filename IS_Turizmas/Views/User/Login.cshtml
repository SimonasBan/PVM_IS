@{
    ViewData["Title"] = "Prisijungimas";
    <div class="col-md-10 mx-auto text-center py-3 my-3">
        <h1>Prisijungimas</h1>
    </div>

    <div class="container-fluid">
        <div class="row">
            <div class="col-md-10 mx-auto">
                <form asp-controller="User" asp-action="Login" method="POST">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label><strong>Prisijungimo vardas</strong></label>
                        <input type="text" name="username" class="form-control" placeholder="Vartotojo vardas" />
                    </div>
                    <div class="form-group">
                        <label><strong>Slaptažodis</strong></label>
                        <input type="password" name="password" class="form-control" placeholder="Vartotojo slaptažodis" />
                    </div>
                    <div>
                        <button type="submit" class="btn btn-primary">Prisijungti</button>
                    </div>
                </form>
            </div>
        </div>
    </div>


}
