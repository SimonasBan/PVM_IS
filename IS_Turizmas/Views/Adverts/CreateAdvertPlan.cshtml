@{
    ViewData["Title"] = "Create Advert Plan";
    <div class="container-fluid">
        <div class="col-md-10 mx-auto text-center py-3 my-3">
            <h1>Kuriamas reklamos planas</h1>
        </div>
        <div class="row">
            <div class="col-md-10 mx-auto">
                <form asp-controller="Adverts" asp-action="AdvertPlanCreate" method="POST">
                    <div class="form-group">
                        <label><strong>Data iki</strong></label>
                        <input type="datetime-local" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label><strong>Laikas nuo</strong></label>
                        <input type="time" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label><strong>Laikas iki</strong></label>
                        <input type="time" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label><strong>Savaitės dienos</strong></label>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" value="" id="MondayCheck">
                            <label class="form-check-label" for="MondayCheck">
                                Pirmadienis
                            </label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" value="" id="TuesdayCheck">
                            <label class="form-check-label" for="TuesdayCheck">
                                Antradienis
                            </label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" value="" id="WednesdayCheck">
                            <label class="form-check-label" for="WednesdayCheck">
                                Trečiadienis
                            </label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" value="" id="ThursdayCheck">
                            <label class="form-check-label" for="ThursdayCheck">
                                Ketvirtadienis
                            </label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" value="" id="FridayCheck">
                            <label class="form-check-label" for="FridayCheck">
                                Penktadienis
                            </label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" value="" id="SaturdayCheck">
                            <label class="form-check-label" for="SaturdayCheck">
                                Šeštadienis
                            </label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" value="" id="SundayCheck">
                            <label class="form-check-label" for="SundayCheck">
                                Sekmadienis
                            </label>
                        </div>
                    </div>
                    <div>
                        <button type="submit" class="btn btn-primary">Sukurti</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <br/>
}
