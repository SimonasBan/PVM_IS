@{
    ViewData["Title"] = "Patvirtinti plano sukūrimą";
    <div class="container-fluid">
        <div class="col-md-10 mx-auto text-center py-3 my-3">
            <h1>Patvirtinti</h1>
        </div>
        <div class="row">
            <div class="col-md-10 mx-auto">
                <form asp-controller="Adverts" asp-action="ConfirmActivation" method="POST">
                    <div class="form-group">
                        <label><strong>Norėdami patvirtinti įrašykite žodi "Patvirtinti"</strong></label>
                        <input type="text" class="form-control" placeholder="Patvirtinti" />
                    </div>
                    <div>
                        <button type="submit" class="btn btn-primary">Patvirtinti</button>
                    </div>
                </form>
                <div class="my-3">
                    <a asp-action="CreateAdvertPlan" class="btn btn-primary">Atšaukti</a>
                </div>
            </div>
        </div>
    </div>
}
