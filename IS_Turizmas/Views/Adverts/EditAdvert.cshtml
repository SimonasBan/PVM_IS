@using IS_Turizmas.Models
@model IS_Turizmas.Models.Reklamos
@{
    ViewData["Title"] = "Redaguoti reklamą";
    <div class="container-fluid">
        <div class="col-md-10 mx-auto text-center py-3 my-3">
            <h1>Redaguojama reklama</h1>
        </div>
        <div class="row">
            <div class="col-md-10 mx-auto">
                <form asp-controller="Adverts" asp-action="AdvertEdit" enctype="multipart/form-data" method="POST">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Id" />
                    <div class="form-group">
                        <label><strong>Pavadinimas</strong></label>
                        <input type="text" class="form-control" asp-for="Pavadinimas" placeholder="Įveskite reklamos pavadinimą" />
                        <span asp-validation-for="Pavadinimas" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label><strong>Dabartinis paveikslėlis</strong></label>
                        <img class="ad-image-preview img-thumbnail" src="~/@Model.Paveikslelis" />
                    </div>
                    <div class="form-group">
                        <label><strong>Naujas paveikslėlis (neprivaloma)</strong></label>
                        <input type="file" class="form-control" name="naujasPaveikslas"/>
                    </div>
                    <div class="form-group">
                        <label><strong>Tikslo url</strong></label>
                        <input type="text" class="form-control" asp-for="Url" placeholder="Įveskite url" />
                        <span asp-validation-for="Url" class="text-danger"></span>
                    </div>
                    <div>
                        <button type="submit" class="btn btn-primary">Redaguoti</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
}
