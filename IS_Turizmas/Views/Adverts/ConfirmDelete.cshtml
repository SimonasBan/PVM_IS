@{
    ViewData["Title"] = "Patvirtinti plano pašalinimą";
    <div class="container-fluid">
        <div class="col-md-10 mx-auto text-center py-3 my-3">
            <h1>Patvirtinti</h1>
        </div>
        <div class="row">
            <div class="col-md-10 mx-auto">
                <form asp-controller="Adverts" asp-action="ConfirmActivation" method="POST">
                    <div class="form-group">
                        <label><strong>Norėdami pašalinti įrašykite žodi "Šalinti"</strong></label>
                        <input type="text" class="form-control" placeholder="Šalinti" />
                    </div>
                    <div>
                        <button type="submit" class="btn btn-primary">Šalinti</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
}
